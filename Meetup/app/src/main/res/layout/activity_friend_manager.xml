<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="400dp" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="jefferyvicente.meetup.friendManager">

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/friendSeach_editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="Search for friends" />

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="search"
        android:id="@+id/search_button"
        android:layout_alignBottom="@+id/friendSeach_editText"
        android:layout_toEndOf="@+id/friendSeach_editText" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView2"
        android:layout_below="@+id/friendSeach_editText"
        android:layout_alignParentStart="true" />
</RelativeLayout>
